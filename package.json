{
  "name": "@ngx-translate/i18n-polyfill",
  "description": "A speculative polyfill to support i18n code translations in Angular",
  "version": "0.1.0",
  "scripts": {
    "build": "gulp build",
    "build:watch": "gulp",
    "commit": "git-cz",
    "docs": "npm run docs:build",
    "docs:build": "compodoc -p tsconfig.json -n ngx-translate-prolyfill -d docs --hideGenerator",
    "docs:serve": "npm run docs:build -- -s",
    "docs:watch": "npm run docs:build -- -s -w",
    "lint": "tslint --project tsconfig.json src/**/*.ts",
    "prepublish": "npm run build && npm run lint && npm run test",
    "publish": "npm publish dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --runInBand"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "setupTestFrameworkScriptFile": "<rootDir>/test/jest.ts",
    "globals": {
      "ts-jest": {
        "tsConfigFile": "test/tsconfig.spec.json"
      }
    },
    "testRegex": "test/.*\\.(test|spec)\\.(ts|js)$"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ngx-translate/prolyfill"
  },
  "author": {
    "name": "Olivier Combe",
    "email": "olivier.combe@gmail.com"
  },
  "keywords": [
    "angular",
    "i18n"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ngx-translate/prolyfill/issues"
  },
  "peerDependencies": {},
  "devDependencies": {
    "@angular/common": "5.0.1",
    "@angular/compiler": "5.0.1",
    "@angular/compiler-cli": "5.0.1",
    "@angular/core": "5.0.1",
    "@angular/platform-browser": "5.0.1",
    "@angular/platform-browser-dynamic": "5.0.1",
    "@compodoc/compodoc": "1.0.4",
    "@types/core-js": "0.9.43",
    "@types/del": "3.0.0",
    "@types/glob": "^5.0.33",
    "@types/gulp": "4.0.5",
    "@types/gulp-rename": "0.0.33",
    "@types/jest": "21.1.6",
    "@types/node": "8.0.51",
    "@types/node-sass": "3.10.32",
    "@types/prettier": "1.8.0",
    "@types/rollup": "0.41.1",
    "@types/run-sequence": "0.0.30",
    "@types/systemjs": "0.20.6",
    "angular-in-memory-web-api": "0.5.1",
    "codelyzer": "4.0.1",
    "commitizen": "2.9.6",
    "core-js": "2.5.1",
    "del": "3.0.0",
    "gulp": "3.9.1",
    "gulp-rename": "1.2.2",
    "gulp-rollup": "2.15.0",
    "jest": "21.2.1",
    "jest-preset-angular": "4.0.1",
    "node-sass": "4.6.1",
    "node-sass-tilde-importer": "1.0.0",
    "node-watch": "0.5.5",
    "prettier": "1.8.2",
    "protractor": "5.2.0",
    "rollup": "0.51.5",
    "run-sequence": "2.2.0",
    "rxjs": "5.5.2",
    "ts-node": "3.3.0",
    "tslint": "5.8.0",
    "tslint-config-prettier": "1.6.0",
    "typescript": "2.4.2",
    "zone.js": "0.8.18"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "engines": {
    "node": ">=6.0.0"
  },
  "dependencies": {
    "glob": "^7.1.2"
  }
}
